<h2>All hobbies</h2>
<table class="hobby_table">
<tr>
<th>Name</th>
<th>Users</th>
<th>Add</th>
</tr>
<% @hobbies.each do |hobby|%>
<tr>
<td><%= hobby.name%></td> 
<td><%=hobby.users.pluck(:username).join(',')%></td>
<%if current_user.hobbies.include?(hobby)%>
<td>Already your hobby</td>
<%else%>
<td>
<%= button_to "Add to your hobbies",{controller: "hobbies", action: "add_user", method: :get, id: hobby.id,user_id:current_user.id} %>
</td>
<%end%>
</tr>
<% end %>
</table>
<h3>Add new Hobby</h3>
<%= form_for(Hobby.new) do |f| %>
<div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autocomplete: "Hobby name" %>
    <%= f.submit "Create hobby" %>
</div>
<% end %>
